        <button type="button" style="display:inline; width:49%;" class="btn btn-primary" onclick="location.href = '@Url.Action("Index", "Zlecenie")'">Powrót do listy</button>
    </div>
	<hr />
    <dl class="dl-horizontal">
        <dt>
