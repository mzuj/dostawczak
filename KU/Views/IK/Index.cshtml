@model IEnumerable<KU.Models.Zlecenie>
<meta http-equiv="Refresh" content="5">
@{
    ViewBag.Title = "Zlecenia";
}
<br>
<h3 style="display:inline;">Twoje zlecenia <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Index", "Zlecenie")'" style="width:auto;">Odśwież</button></h3> 
<br>

    @if (User.Identity.IsAuthenticated) {  

        foreach (var item in Model)
        {
            <br>
            if (item.Priorytet) { 
                <button type="button" class="btn btn-warning" onclick="location.href = '@Url.Action("Details", "IK", new { id = item.ZlecenieID })'">
                    @Html.ActionLink(item.RodzajZleceniaSet.Rodzaj + ": " + item.ZlecenieID + " PRIORYTET", "Details", new { id = item.ZlecenieID }) <br>
                    Adres: @item.Miejsce_dostawy<br>
                    Odbiorca: @item.Odbiorca<br>
                </button>
                <br>
            }
            else { 
                <button type="button" class="btn btn-default" onclick="location.href = '@Url.Action("Details", "IK", new { id = item.ZlecenieID })'">
                    @Html.ActionLink(item.RodzajZleceniaSet.Rodzaj + ": " + item.ZlecenieID, "Details", new { id = item.ZlecenieID }) <br>
                    Adres: @item.Miejsce_dostawy<br>
                    Odbiorca: @item.Odbiorca<br>
                </button>
                <br>
            }
        }

    }

