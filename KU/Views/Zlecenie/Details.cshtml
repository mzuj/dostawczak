        <dd>
            @Html.DisplayFor(model => model.Kategoria_zlecenia)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Kurier)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUsers.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StatusZlecenie.Nazwa)
        </dd>

    </dl>
</div>
    <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Completed", "Zlecenie", new { id = Model.ZlecenieID })'">Dostarczono</button>
